{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Remote Attach to AWS Lambda",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "port": 5678,
                "host": "127.0.0.1",
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/app",
                    "remoteRoot": "/app",
                }
            ]
        },
        {
            "name": "Python: Debug Current File with Args",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/app/src"
            }
        }
    ]
}